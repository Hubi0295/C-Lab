#include <stdio.h>
#include <stdlib.h>
int**f(int w, int k,int T[][k], int *M, int*ile);


int main()
{
    int i, j, w, k, nr;
    printf("ile wierszy?");
    scanf("%d",&w);
    printf("ile kolumn?");
    scanf("%d",&k);
    int T[w][k], s1=0, s2=0, r;
    for(i=0; i<w; i++)for (j=0; j<k; j++)
        {
            printf("podaj elem.tablicy");
            scanf("%d",&T[i][j]);
        }
    printf("tablica\n");
    for(i=0; i<w; i++)
    {
        for (j=0; j<k;j++)
            printf("%d\t",T[i][j]);
        printf("\n");
    }
    int**B;
    int max=T[0][0];
    int il=0;
    B=f(w, k, T, &max,&il);
    printf("Maksymalna wartosÄ‡ wynosi:%d %d\n", max,il);
    for(i=0; i<il; i++)
    {
        printf("%d %d\n", B[i][0], B[i][1]);
    }

}

int**f(int w, int k,int T[][k], int *M, int*ile) {
    int i, j;
    int max = T[0][0];
    int il = 0;
    for (i = 0; i < w; i++) {
        for (j = 0; j < k; j++) {
            if (T[i][j] > max) {
                il = 1;
                max = T[i][j];
            } else {
                if (T[i][j] == max) {
                    il++;
                }
            }
        }
    }
    int kr = 0;
    int **B = (int **) malloc(il * sizeof(int));
    for (i = 0; i < il; i++)
        B[i] = (int *) malloc(2 * sizeof(int));
    for (i = 0; i < w; i++) {
        for (j = 0; j < k; j++) {
            if (T[i][j] == max) {
                B[kr][1] = j;
                B[kr][0] = i;
                kr++;

            }
        }
    }
    *M = max;
    *ile = il;
    return B;
}
